<div class="container">
  <h1>Log In</h1>
</div>

<div class="container">
  <%= form_tag login_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email, nil, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, :class => 'form-control' %>
      </div>

      <div class="form-group">
        <%= submit_tag "Sign In", :class => 'btn btn-outline-primary' %>
      </div>
  <% end %>
</div>
